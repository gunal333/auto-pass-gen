html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title List of Passwords
        link(rel="stylesheet", href="/css/main_form.css")

            
    body
        .table
            if pass.length > 0
                    table(style={width:100})
                        h2 List Of Passwords    
                        tr
                            th S.no
                            th Password
                        - var count = 1
                        each item of pass
                            tr
                                td #{count}
                                td #{item}
                            -count=count+1
            else
                h1 No passwords available

        